@model BeFit.Models.ExerciseSession

@{
    ViewData["Title"] = "Exercise Session Details";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Exercise Session Details</h1>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            &larr; Back to List
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

            <h4 class="mb-4">Exercise Session</h4>
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.ExerciseType)
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Model.ExerciseType?.Name
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Exercise)
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Model.Exercise?.DateTimeBeginning.ToString("yyyy-MM-dd HH:mm") - @Model.Exercise?.DateTimeEnding.ToString("yyyy-MM-dd HH:mm")
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Weight)
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Model.Weight
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Series)
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Model.Series
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.Repetitions)
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Model.Repetitions
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-3">
                    Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Back to List
                </a>
            </div>

        </div>
    </div>

</div>
