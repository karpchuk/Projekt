@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">BeFit</h1>
        <p class="lead text-secondary">
            Your personal fitness companion — simple, fast, and effective.
        </p>
    </div>

    <div class="row justify-content-center">

        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <h2 class="text-center mb-4 fw-semibold">Track your fitness journey</h2>

                    <p class="fs-5 text-muted">
                        BeFit helps you stay organized and motivated by keeping track of your
                        exercise routine, training sessions, and workout progress — all in one place.
                    </p>

                    <ul class="fs-5 mt-4">
                        <li>Create your own custom exercise types</li>
                        <li>Log your workout sessions with ease</li>
                        <li>Track progress by linking exercises to sessions</li>
                        <li>Review your history and optimize your training</li>
                    </ul>

                    <div class="text-center mt-5">
                        <a href="/ExerciseTypes" class="btn btn-primary btn-lg px-5 me-3">Exercise Types</a>
                        <a href="/ExerciseSessions" class="btn btn-outline-primary btn-lg px-5">Sessions</a>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>
