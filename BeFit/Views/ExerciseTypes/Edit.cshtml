@model BeFit.Models.ExerciseType

@{
    ViewData["Title"] = "Edit Exercise Type";
}

<div class="container mt-5">

    <!-- Nag?ówek -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Edit Exercise Type</h1>
        <a asp-action="Index" class="btn btn-outline-dark btn-lg rounded-pill shadow-sm">
            &larr; Back to List
        </a>
    </div>

    <!-- Karta -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">

            <!-- Sekcja formularza -->
            <h4 class="mb-4 text-secondary border-bottom pb-2">Exercise Type Information</h4>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <input type="hidden" asp-for="Id" />

                <!-- Pole Name -->
                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg shadow-sm" placeholder="Enter exercise type name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Przyciski akcji -->
                <div class="d-flex mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-4 me-3 shadow-sm">
                        Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 shadow-sm">
                        ?Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Custom CSS -->
<style>
    h1 {
        letter-spacing: 1px;
    }

    .card {
        border: 1px solid #e0e0e0;
    }

    .form-control-lg {
        font-size: 1.1rem;
        padding: 0.75rem 1rem;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
