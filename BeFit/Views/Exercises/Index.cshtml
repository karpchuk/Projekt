@model IEnumerable<BeFit.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Exercises</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            + Create New
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="fs-5">Start Time</th>
                        <th class="fs-5">End Time</th>
                        <th class="text-end fs-5">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fs-6">
                                @item.DateTimeBeginning.ToString("yyyy-MM-dd HH:mm")
                            </td>

                            <td class="fs-6">
                                @item.DateTimeEnding.ToString("yyyy-MM-dd HH:mm")
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">
                                    Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-2">
                                    Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
